<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nav_background"
    tools:context=".Activity.AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Add New Product"
        android:textColor="@color/gen_black"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />



    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/chair"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/f3"
            />

        <ImageView
            android:id="@+id/tables"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="5dp"

            android:src="@drawable/table1"
            />

        <ImageView
            android:id="@+id/dressing_table"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/dressing"
            />




    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/chest"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="5dp"

            android:src="@drawable/adcabinet"
            />

        <ImageView
            android:id="@+id/bed"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="5dp"

            android:src="@drawable/adbed"
            />

        <ImageView
            android:id="@+id/wadrobe"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="5dp"

            android:src="@drawable/adwadrobe"
            />



    </LinearLayout>


<!--<Button-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--android:text="Logout"-->
    <!--android:id="@+id/adminlogout"/>-->


</RelativeLayout>